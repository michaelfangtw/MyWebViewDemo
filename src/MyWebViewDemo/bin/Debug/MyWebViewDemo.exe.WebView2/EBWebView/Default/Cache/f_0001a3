        ,"features":"99-feature-mobile-H1"
    };

    var check = {
        "talk": true
        ,"estate": true
    };
    // 將RWD的domaim加入此陣列
    var checkHost = ['test', 'news', 'partners', 'auto', 'ec', 'istyle', 'sports', 'playing', 'video', 'ent', 'health', '3c', 'talk', 'food', 'estate', 'features'];
    var host = location.hostname.toLowerCase().replace(".ltn.com.tw", "");

    // 檢查是否為RWD的網站
    var isRWD = false;
    for (key in checkHost) {
        if (host.indexOf(checkHost[key]) >= 0) {
            isRWD = true;
        }
    }
    var unit_id = units[host] || units["m"];
    if(check[host] && window["cookies_m"]){
        if(cookies_m.isPC()) window.show_onead_mic = false;
    }

    //===== 期間內關閉蓋台(開始) =====
    var dfpSwitch = {
        'sports' : [
            {'start' : '2019-07-01 12:00:00', 'end' : '2019-07-03 11:59:59'},
            {'start' : '2019-07-06 12:00:00', 'end' : '2019-07-07 11:59:59'},
            {'start' : '2019-07-08 12:00:00', 'end' : '2019-07-09 11:59:59'},
            {'start' : '2019-07-10 12:00:00', 'end' : '2019-07-11 11:59:59'},
            {'start' : '2019-07-12 12:00:00', 'end' : '2019-07-13 11:59:59'},
            {'start' : '2019-07-14 12:00:00', 'end' : '2019-07-15 11:59:59'},
            {'start' : '2019-07-18 12:00:00', 'end' : '2019-07-22 11:59:59'}
